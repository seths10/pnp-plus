{
  "manifest_version": 3,
  "name": "Advanced Picture-in-Picture",
  "version": "1.0",
  "description": "A Picture-in-Picture extension with advanced features",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "html/popup.html"
  }
}